<!DOCTYPE html>
<!DOCTYPE html>
<html>
  <head>
    <title>QuickQuote | On Site Portal</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,500;0,600;0,700;1,100;1,200&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    
    <style>
      body
      {
        margin: 0;
        font-family: Poppins, Arial;
        text-decoration: none;
      }

      .background
      {
        display: flex;
        flex-direction: row;
        height: 100%;
        background-image: linear-gradient(to bottom, rgb(17, 139, 232) , rgba(254, 251, 251, 0.755));
        flex-direction: column;
      }

      .logo
      {
        margin-top: 100px;
        margin-bottom: 80px;
        color: white;
        font-size: 60px;
        opacity: 0.65;
        font-weight: 500;
        font-style: italic;
      }

      .welcome-text
      {
        padding-top: 50px;
        font-weight: 600;
        font-size: 26px;
        display: flex;
        justify-content: center;
        padding-bottom: 30px;
      }

      .plain-text, .customer-name, .quote_date
      {
        font-size: 20px;
      }

      .top
      {
        width: 100%;
        display: flex;
        justify-content: right;
      }

      .logout-button
      {
        margin-right: 15px;
        margin-top: 15px;
        background-color: white;
        border-radius: 5px;
        padding: 5px;
        opacity: 0.8;
        text-decoration: none;
      }

      .logout-text
      {
        text-decoration: none;
      }

      .logo-welcome-box
      {
        display: flex;
        align-items: center;
        flex-direction: column;
      }

      .logo
      {
        margin-top: 25px;
        margin-bottom: 10px;
      }

      .welcome
      {
        font-weight: 600;
        font-size: 26px;
        margin-bottom: 20px;
      }

      .header-button
      {
        background-color: black;
        color: white;
        font-size: 20px;
        height: 100%;
      }

      .existing-quotes-text
      {
        margin-top: 20px;
      }

      .existing-quotes
      {
        width: 300px;
      }

    </style>
  </head>
  <body>
    <div class="background">
      <div class="top">
        <a href="/logout" class = "logout-button">
          <div class="logout-text">
            Log Out
          </div>
        </a>
      </div>
      <div class="logo-welcome-box">
        <div class="logo">QuickQuote</div>
      </div>
      <div class="plain-text">
        Viewing quote for
      </div>
      <div class="customer-name">
        Customer Name
      </div>
      <div class="contact_email"></div>
      <div class="price"></div>
    </div>
    <script>
      let quote_info = JSON.parse('<%- quote_info%>');
      let line_items_info = JSON.parse('<%- line_items_info%>');
      let customer_info = JSON.parse('<%- customer_info%>');
      console.log(customer_info[0].name);

      let year = quote_info[0].date_time.slice(0, 4);
      let month = quote_info[0].date_time.slice(5, 7);
      let day = quote_info[0].date_time.slice(8, 10);

      document.querySelector(".customer-name").innerHTML = `<b>${customer_info[0].name}</b>, generated on ${month}/${day}, ${year}`;

      document.querySelector(".contact_email").innerHTML = `Contact email: ${quote_info[0].customer_email}`;

      document.querySelector(".price").innerHTML = `Total price: $${quote_info[0].initial_total_price}`;

    </script>
  </body>
</html>
